# i3blocks config - minimal setup

command=/usr/share/i3blocks/$BLOCK_NAME
separator_block_width=20
markup=pango

[volume]
command=wpctl get-volume @DEFAULT_AUDIO_SINK@ | awk '{if($3=="[MUTED]") print "Volume MUTE"; else printf "Volume %.0f%%\n", $2*100}'
interval=once
signal=10
color=#d79921

[battery]
command=cat /sys/class/power_supply/BAT0/capacity | xargs -I{} echo "Battery {}%"
interval=30
color=#98971a

[time]
command=date '+%a %b %d  %H:%M'
interval=30
color=#ebdbb2
